<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vue.TestEligibleActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#D80000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:linksClickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Pouvez-vous répondre négativement à toutes ces questions ?"
                android:textColor="@color/colorActionBar"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:shadowColor="@color/balck"
                android:shadowDx="100"
                android:shadowDy="100"
                android:text="Question 1 : Avez-vous déjà eu une transfusion de sang (globules rouges, plaquettes ou plasma) ou une greffe d’organe ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 2 : Avez-vous une anémie ou un manque de fer ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 3 : Avez-vous voyagé dans les 4 derniers mois ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 4 : Avez-vous ou avez-vous eu de la fièvre ou une infection (toux, diarrhée, infection urinaire, plaie cutanée…) dans les 2 dernières semaines ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 5 : Avez-vous eu des soins dentaires depuis moins de 24 heures (carie, détartrage), un traitement de racine ou une extraction dentaire depuis moins d’une semaine ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 6 : Avez-vous été opéré(e) ou subi une endoscopie (fibroscopie gastrique, coloscopie…) dans les 4 derniers mois ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 7 : Avez-vous eu un piercing (boucle d’oreille compris) ou un tatouage dans les 4 derniers mois ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 8 : Avez-vous eu récemment des douleurs cardiaques après un effort ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 9 : Avez-vous eu plus d’un partenaire sexuel dans les 4 derniers mois ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 10 : Avez-vous déjà pris des drogues par voie intraveineuse ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 11 : Avez-vous connaissance de pratiques à risques chez votre partenaire (multipartenaires, drogues par voie intraveineuse) ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/questionAccouchement"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:text="Question 12 : Êtes-vous enceinte ou avez-vous accouché depuis moins de 6 mois ?"
                android:textColor="@color/balck"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:paddingTop="20dp"
                android:text="Si vous ne pouvez pas répondre \'non\' à toutes ces questions, nous vous conseillons d'en parler avec votre medecin.\nVous trouverez également plus d'information sur ce site : https://dondesang.efs.sante.fr"
                android:textColor="@color/colorActionBar"
                android:textSize="18sp" />


            <Button
                android:id="@+id/btnEligible2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continuer" />


        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorItem"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/iconTint"
        app:menu="@menu/menu_view" />


</android.support.v4.widget.DrawerLayout>